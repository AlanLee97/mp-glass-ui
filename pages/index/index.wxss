.page {
  /* background-color: slateblue; */
  width: 100vw;
  height: 100vh;
  padding-top: 40vh;
  position: fixed;
  overflow: scroll;
  background-color: #fff;
}
.components-demo-box-wrapper {
  display: flex;
  padding: 2rem;
  flex-wrap: wrap;
  justify-content: space-between;
}

.components-demo-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: rgba(0, 0, 0, .8);
  backdrop-filter: blur(1rem);
  background-color: rgba(255,255,255,.001);
  border-radius: 1rem;
  box-shadow: .6rem .6rem 20rem rgba(0, 0, 0, .2);
  padding: 1rem 2rem;
  width: calc(100% / 3);
  margin-bottom: 2rem;
}

.cpn-zh-name {
  font-size: 1.4rem;
}

.cpn-name {
  font-size: 1.2rem;
}

.decorate-el {
  position: fixed;
  z-index: -1;
  bottom: -100vw;
  width: 200vw;
  height: 200vw;
  border-radius: 50%;
  background-color: rgba(105, 90, 205, 0.5);
  backdrop-filter: blur(10rem);
  filter: blur(10rem);
}